% Bibliography
\RequirePackage[
                backend=biber,
				        style=numeric,
                hyperref=true,
                mincrossrefs=100,      % don't include collection
               	sorting=ynt,
               	style=numeric,
               	url=false,
               	uniquename=false,
               	uniquelist=false
                ]{biblatex}

\DeclareFieldFormat[book]{title}{\textit{#1}} 
\DeclareFieldFormat[collection]{title}{#1} 
\DeclareFieldFormat[incollection]{title}{#1} 

\DeclareBibliographyDriver{collection}{%
  \usebibmacro{begentry}%
  \printfield{title}%
  \setunit{\space}%
  \printfield{year}%
  \usebibmacro{finentry}}
  
\newbibmacro{mycrossref}{%
  \fullcite{\thefield{crossref}}}
\DeclareBibliographyDriver{incollection}{%
  \usebibmacro{begentry}%
  \ifentryinbib{\thefield{crossref}}{%
    \usebibmacro{mycrossref}%
    \setunit{\space\addcomma\addspace}%
    }{}%
  \printfield{title}%
  \setunit{\space}%
  \printfield{year}%
  \setunit{\addcomma\addspace Nr.\space}%
  \printfield{number}%  
  \usebibmacro{finentry}}

\DeclareBibliographyDriver{book}{%
  \usebibmacro{begentry}%
  \printfield{title}%
  \setunit{\addcomma\addspace}%
  \usebibmacro{author}%
  \setunit{\addcomma\addspace}%
  \printfield{year}%
  \usebibmacro{finentry}}

